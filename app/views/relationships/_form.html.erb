<div class="max-w-2xl mx-auto">
  <div class="bg-white rounded-xl shadow-lg p-8">
    <h2 class="text-3xl font-bold text-slate-800 mb-6">関係を追加</h2>

    <%= form_with(model: @relationship, class: "space-y-6") do |form| %>
      <% if @relationship.errors.any? %>
        <div class="bg-red-50 border-l-4 border-red-500 p-4 rounded-r-lg">
          <h3 class="text-red-800 font-semibold mb-2"><%= pluralize(@relationship.errors.count, "error") %> prohibited this relationship from being saved:</h3>
          <ul class="list-disc list-inside text-red-700">
            <% @relationship.errors.each do |error| %>
              <li><%= error.full_message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div>
        <%= form.label :person1_id, "人物1 *", class: "block text-sm font-semibold text-slate-700 mb-2" %>
        <%= form.select :person1_id, options_from_collection_for_select(@people, :id, :name, @relationship.person1_id), { include_blank: '選択してください' }, { required: true, class: "w-full px-4 py-3 border border-slate-300 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-transparent transition-all" } %>
      </div>

      <div>
        <%= form.label :person2_id, "人物2 *", class: "block text-sm font-semibold text-slate-700 mb-2" %>
        <%= form.select :person2_id, options_from_collection_for_select(@people, :id, :name, @relationship.person2_id), { include_blank: '選択してください' }, { required: true, class: "w-full px-4 py-3 border border-slate-300 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-transparent transition-all" } %>
      </div>

      <div>
        <%= form.label :relationship_type, "関係 *", class: "block text-sm font-semibold text-slate-700 mb-2" %>
        <%= form.select :relationship_type, [['選択してください', ''], ['配偶者', 'spouse'], ['前配偶者', 'ex_spouse'], ['親子', 'parent_child']], {}, { required: true, class: "w-full px-4 py-3 border border-slate-300 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-transparent transition-all" } %>
      </div>

      <div class="flex space-x-4">
        <%= form.submit "保存", class: "flex-1 px-6 py-3 bg-gradient-to-r from-green-600 to-teal-600 text-white font-semibold rounded-lg shadow-lg hover:shadow-xl transform hover:-translate-y-0.5 transition-all cursor-pointer" %>
        <%= link_to "キャンセル", relationships_path, class: "flex-1 px-6 py-3 bg-slate-200 text-slate-700 font-semibold rounded-lg text-center hover:bg-slate-300 transition-all" %>
      </div>
    <% end %>
  </div>
</div>
