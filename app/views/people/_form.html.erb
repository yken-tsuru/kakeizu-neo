<div class="max-w-2xl mx-auto">
  <div class="bg-white rounded-xl shadow-lg p-8">
    <h2 class="text-3xl font-bold text-slate-800 mb-6"><%= @person.persisted? ? '人物を編集' : '人物を追加' %></h2>

    <%= form_with(model: @person, class: "space-y-6") do |form| %>
      <% if @person.errors.any? %>
        <div class="bg-red-50 border-l-4 border-red-500 p-4 rounded-r-lg">
          <h3 class="text-red-800 font-semibold mb-2"><%= pluralize(@person.errors.count, "error") %> prohibited this person from being saved:</h3>
          <ul class="list-disc list-inside text-red-700">
            <% @person.errors.each do |error| %>
              <li><%= error.full_message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div>
        <%= form.label :name, "名前 *", class: "block text-sm font-semibold text-slate-700 mb-2" %>
        <%= form.text_field :name, required: true, class: "w-full px-4 py-3 border border-slate-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all" %>
      </div>

      <div>
        <%= form.label :gender, "性別", class: "block text-sm font-semibold text-slate-700 mb-2" %>
        <%= form.select :gender, [['選択してください', ''], ['男性', '男性'], ['女性', '女性']], {}, class: "w-full px-4 py-3 border border-slate-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all" %>
      </div>

      <div>
        <%= form.label :birth_date, "生年月日", class: "block text-sm font-semibold text-slate-700 mb-2" %>
        <%= form.text_field :birth_date, placeholder: "例: 1980年1月1日 または 1980", class: "w-full px-4 py-3 border border-slate-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all" %>
      </div>

      <div>
        <%= form.label :death_date, "没年月日", class: "block text-sm font-semibold text-slate-700 mb-2" %>
        <%= form.text_field :death_date, placeholder: "例: 2020年12月31日 または 2020", class: "w-full px-4 py-3 border border-slate-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all" %>
      </div>

      <div class="flex items-center">
        <%= form.check_box :is_adopted, class: "w-5 h-5 text-blue-600 border-slate-300 rounded focus:ring-2 focus:ring-blue-500" %>
        <%= form.label :is_adopted, "養子", class: "ml-3 text-sm font-medium text-slate-700" %>
      </div>

      <div>
        <%= form.label :notes, "備考", class: "block text-sm font-semibold text-slate-700 mb-2" %>
        <%= form.text_area :notes, rows: 4, class: "w-full px-4 py-3 border border-slate-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all" %>
      </div>

      <div class="flex space-x-4">
        <%= form.submit "保存", class: "flex-1 px-6 py-3 bg-gradient-to-r from-blue-600 to-purple-600 text-white font-semibold rounded-lg shadow-lg hover:shadow-xl transform hover:-translate-y-0.5 transition-all cursor-pointer" %>
        <%= link_to "キャンセル", people_path, class: "flex-1 px-6 py-3 bg-slate-200 text-slate-700 font-semibold rounded-lg text-center hover:bg-slate-300 transition-all" %>
      </div>
    <% end %>
  </div>
</div>
