<div class="space-y-6">
  <div class="flex justify-between items-center">
    <h2 class="text-3xl font-bold text-slate-800">人物一覧</h2>
    <%= link_to "➕ 人物を追加", new_person_path, class: "px-6 py-3 bg-gradient-to-r from-blue-600 to-purple-600 text-white font-semibold rounded-lg shadow-lg hover:shadow-xl transform hover:-translate-y-0.5 transition-all" %>
  </div>

  <div class="bg-white rounded-xl shadow-lg overflow-hidden">
    <div class="overflow-x-auto">
      <table class="min-w-full divide-y divide-slate-200">
        <thead class="bg-gradient-to-r from-slate-50 to-blue-50">
          <tr>
            <th class="px-6 py-4 text-left text-xs font-semibold text-slate-700 uppercase tracking-wider">名前</th>
            <th class="px-6 py-4 text-left text-xs font-semibold text-slate-700 uppercase tracking-wider">性別</th>
            <th class="px-6 py-4 text-left text-xs font-semibold text-slate-700 uppercase tracking-wider">生年月日</th>
            <th class="px-6 py-4 text-left text-xs font-semibold text-slate-700 uppercase tracking-wider">没年月日</th>
            <th class="px-6 py-4 text-left text-xs font-semibold text-slate-700 uppercase tracking-wider">養子</th>
            <th class="px-6 py-4 text-left text-xs font-semibold text-slate-700 uppercase tracking-wider">備考</th>
            <th class="px-6 py-4 text-right text-xs font-semibold text-slate-700 uppercase tracking-wider">操作</th>
          </tr>
        </thead>
        <tbody class="bg-white divide-y divide-slate-100">
          <% @people.each do |person| %>
            <tr class="hover:bg-blue-50 transition-colors">
              <td class="px-6 py-4 whitespace-nowrap">
                <div class="text-sm font-medium text-slate-900"><%= person.name %></div>
              </td>
              <td class="px-6 py-4 whitespace-nowrap">
                <% if person.gender == '男性' %>
                  <span class="px-3 py-1 inline-flex text-xs leading-5 font-semibold rounded-full bg-blue-100 text-blue-800">
                    <%= person.gender %>
                  </span>
                <% elsif person.gender == '女性' %>
                  <span class="px-3 py-1 inline-flex text-xs leading-5 font-semibold rounded-full bg-pink-100 text-pink-800">
                    <%= person.gender %>
                  </span>
                <% else %>
                  <span class="text-slate-400">-</span>
                <% end %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-slate-600">
                <%= person.birth_date.present? ? person.birth_date : '-' %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-slate-600">
                <%= person.death_date.present? ? person.death_date : '-' %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-slate-600">
                <%= person.is_adopted ? '✓' : '' %>
              </td>
              <td class="px-6 py-4 text-sm text-slate-600 max-w-xs truncate">
                <%= person.notes.present? ? person.notes : '-' %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium space-x-2">
                <%= link_to "表示", person, class: "text-blue-600 hover:text-blue-900 font-medium" %>
                <%= link_to "編集", edit_person_path(person), class: "text-green-600 hover:text-green-900 font-medium" %>
                <%= button_to "削除", person, method: :delete, data: { turbo_confirm: "本当に削除しますか？" }, class: "text-red-600 hover:text-red-900 font-medium" %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
